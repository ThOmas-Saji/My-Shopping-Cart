<section>
  <div class="container mt-4">
    <div class="row">
      <a href="/admin/add-product" style="width:15% ; margin-left:auto; margin-right:2rem" class="btn bg-warning ">Add
        new Product</a>
    </div>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>No.</th>
          <th>Title</th>
          <th>
            Description
          </th>
          <th>Price</th>
          <th>Image</th>
          <th>Modify</th>
        </tr>
      </thead>
      <tbody>

        {{#each products}}
        <tr>
          <th>{{@index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>â‚¹{{this.price}}</td>
          <td><img width="50px" src="/product-images/{{this._id}}.jpg" /> </td>
          <td>
            <div class="btn-group" role="group">
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-outline-primary">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-outline-danger"
                onclick="return confirm('Are you sure want to delete {{this.name}} product ?')">Delete</a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
