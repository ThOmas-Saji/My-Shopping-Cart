<section>
  <div class="container mt-4">
    <div class="row">
      <a href="/admin/add-product" style="width:15% ; margin-left:auto; margin-right:2rem" class="btn bg-warning ">Add new Product</a>
    </div>
    <table class="table table-dark table-striped mt-2">
      <thead>
        <tr>
          <th scope="col">No.</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>

        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.product_name}}</td>
          <td>{{this.price}}</td>
          <td><img width="50px" src={{this.image_url}} /> </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>