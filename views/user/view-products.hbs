<section>
  <div class="container m-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-3">
        <div class="card m-1" style="width: 15rem; height: 25rem; font-size: 12px; text-align:center;">
          <img id="product-image" src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="dummy_images">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">â‚¹{{this.price}}</p>   
            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')" >Add to cart</button>
            <p class="productDes">{{this.description}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

